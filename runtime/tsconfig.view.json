{
  "compilerOptions": {
    "incremental": false,
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "WebWorker"],
    "jsx": "preserve",
    "module": "ESNext",
    "rootDir": "./src/view",
    "moduleResolution": "Node",
    "typeRoots": ["./node_modules/@types"],
    "allowJs": false,
    "checkJs": false,
    "outDir": "./dist/view",
    "importHelpers": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.tsx", "src/**/*.d.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
